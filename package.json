{
  "name": "@socio-development/jsg",
  "version": "0.2.0",
  "description": "TypeScript-first JSON schema declaration library",
  "author": "CasperSocio <https://github.com/CasperSocio>",
  "license": "MIT",
  "homepage": "https://github.com/Socio-Development/jsg#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Socio-Development/jsg.git"
  },
  "bugs": {
    "url": "https://github.com/Socio-Development/jsg/issues"
  },
  "keywords": [
    "json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --build",
    "dev": "tsx playground/main.ts",
    "format": "prettier --write .",
    "prepare": "husky",
    "rollup": "rollup -c",
    "semver": "tsx scripts/semver.ts",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,json,md,ts,ya?ml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "3.4.2",
    "rollup": "^4.28.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "~5.7.2"
  }
}
